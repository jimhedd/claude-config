{
  "permissions": {
    "allow": [
      "Bash(./gradlew:*)",
      "Bash(../../gradlew:*)",
      "Bash(*:/tmp/*)",
      "Bash(git*)"
    ],
    "deny": []
  },
  "hooks": {
    "Notification": [
      {
	"matcher": "permission_prompt|elicitation_dialog|idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code' -message 'Awaiting your input' -sound Sosumi"
          },
          {
            "type": "command",
            "command": "$HOME/.claude/scripts/ntfy-notify.sh 'Awaiting your input'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -title 'Claude Code' -message '✨ Task Complete' -sound Glass"
          },
          {
            "type": "command",
            "command": "$HOME/.claude/scripts/ntfy-notify.sh '✨ Task Complete'"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bun x ccusage statusline"
  },
  "enabledPlugins": {
    "ralph-wiggum@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "mcpServers": {
  },
  "model": "opus"
}
